<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th>User_id</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post|%>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.user_id %>
        <td><%= link_to 'Show', post %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Delete', post, method: :delete %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
